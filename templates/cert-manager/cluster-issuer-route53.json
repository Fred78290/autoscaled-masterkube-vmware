{
    "apiVersion": "cert-manager.io/v1",
    "kind": "ClusterIssuer",
    "metadata": {
        "name": "cert-issuer-prod",
        "namespace": "cert-manager"
    },
    "spec": {
        "acme": {
            "privateKeySecretRef": {
                "name": "certmanager-prod-account-key"
            },
            "solvers": [
                {
                    "selector": {
                        "dnsZones": [
                            "${PUBLIC_DOMAIN_NAME}"
                        ]
                    },
                    "dns01": {
                        "route53": {
                            "region": "$AWS_REGION",
                            "accessKeyID": "$AWS_ROUTE53_ACCESSKEY",
                            "secretAccessKeySecretRef": {
                                "name": "route53-credentials-secret",
                                "key": "secret"
                            }
                        }
                    }
                }
            ]
        }
    }
}